<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"> <!-- https://stackoverflow.com/a/21248191/1034895 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gray_dumbbell" />
        <TextView
            android:id="@+id/splashWelcomeToLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/splash_welcome_to_margin_top"
            android:text="Welcome to"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/splash_welcome_to_font_size" />
        <TextView
            android:id="@+id/rikerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Riker"
            android:textAlignment="center"
            android:textSize="@dimen/splash_title_font_size"
            android:textColor="@android:color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Track your strength."
            android:textColor="@android:color/white"
            android:textSize="@dimen/splash_subtitle_font_size"
            android:textAlignment="center" />
    </LinearLayout>
</ScrollView>
