<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <include layout="@layout/chart_heading_panel" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/chartContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pie_chart_height"
            android:layout_marginTop="@dimen/pie_chart_top_margin"
            android:layout_marginLeft="@dimen/pie_chart_side_margin"
            android:layout_marginRight="@dimen/pie_chart_side_margin" />
        <ProgressBar
            android:id="@+id/chartProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/noDataToChartYetContainer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/no_data_panel_margin">
        <include layout="@layout/no_data_to_chart_yet_panel" />
    </LinearLayout>
</LinearLayout>
