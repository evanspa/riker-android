<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentBackground">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:animateLayoutChanges="true">
            <EditText
                android:id="@+id/searchMovementsEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/search_movs_edittext_padding_start"
                android:paddingLeft="@dimen/search_movs_edittext_padding_left"
                android:paddingTop="@dimen/search_movs_edittext_padding_top"
                android:paddingBottom="@dimen/search_movs_edittext_padding_bottom"
                android:layout_marginTop="@dimen/search_movs_edittext_margin_top"
                android:layout_marginBottom="@dimen/search_movs_edittext_margin_bottom"
                android:hint="Search movements..."
                android:text=""
                android:backgroundTint="@color/colorPrimary"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/cancelMovementSearchEditTextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="Cancel"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/numSearchResultsHeaderLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/numSearchResultsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="7 results"
                    android:textStyle="italic"/>
                <!-- https://stackoverflow.com/a/14677887/1034895 -->
                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/cancelSearchResultsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Cancel Search" />
            </LinearLayout>
            <ListView
                android:id="@+id/searchResultsListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numSearchResultsHeaderLinearLayout" />
        </RelativeLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/contentContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/home_sub_section_bar_top_top_margin"
                    android:paddingBottom="150dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/headingPanelContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <include layout="@layout/heading_panel" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/jumpToButtonsContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/home_sub_section_bar_top_top_margin"
                            android:paddingBottom="@dimen/jump_button_vertical_margin"
                            android:background="@color/colorPrimary">
                            <com.google.android.flexbox.FlexboxLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/home_sub_section_bar_top_top_margin"
                                android:paddingTop="@dimen/jump_to_panel_vertical_padding"
                                android:paddingBottom="@dimen/jump_to_panel_vertical_padding"
                                android:background="@color/colorPrimary"
                                app:flexWrap="wrap"
                                app:justifyContent="center">
                                <Button
                                    android:id="@+id/jumpToBodyWeightButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minHeight="0dp"
                                    android:minWidth="0dp"
                                    android:padding="@dimen/jump_button_padding"
                                    android:layout_marginTop="@dimen/jump_button_vertical_margin"
                                    android:layout_marginLeft="@dimen/home_header_buttons_button_horizontal_margin"
                                    android:layout_marginRight="@dimen/home_header_buttons_button_horizontal_margin"
                                    android:background="@drawable/jump_to_button"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/jump_to_button_text_size"
                                    android:text="body weight"  />
                                <Button
                                    android:id="@+id/jumpToArmSizeButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minHeight="0dp"
                                    android:minWidth="0dp"
                                    android:padding="@dimen/jump_button_padding"
                                    android:layout_marginTop="@dimen/jump_button_vertical_margin"
                                    android:layout_marginLeft="@dimen/home_header_buttons_button_horizontal_margin"
                                    android:layout_marginRight="@dimen/home_header_buttons_button_horizontal_margin"
                                    android:background="@drawable/jump_to_button"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/jump_to_button_text_size"
                                    android:text="arms"  />
                                <Button
                                    android:id="@+id/jumpToChestSizeButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minHeight="0dp"
                                    android:minWidth="0dp"
                                    android:padding="@dimen/jump_button_padding"
                                    android:layout_marginTop="@dimen/jump_button_vertical_margin"
                                    android:layout_marginLeft="@dimen/home_header_buttons_button_horizontal_margin"
                                    android:layout_marginRight="@dimen/home_header_buttons_button_horizontal_margin"
                                    android:background="@drawable/jump_to_button"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/jump_to_button_text_size"
                                    android:text="chest"  />
                                <Button
                                    android:id="@+id/jumpToCalfSizeButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minHeight="0dp"
                                    android:minWidth="0dp"
                                    android:padding="@dimen/jump_button_padding"
                                    android:layout_marginTop="@dimen/jump_button_vertical_margin"
                                    android:layout_marginLeft="@dimen/home_header_buttons_button_horizontal_margin"
                                    android:layout_marginRight="@dimen/home_header_buttons_button_horizontal_margin"
                                    android:background="@drawable/jump_to_button"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/jump_to_button_text_size"
                                    android:text="calfs"  />
                                <Button
                                    android:id="@+id/jumpToThighSizeButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minHeight="0dp"
                                    android:minWidth="0dp"
                                    android:padding="@dimen/jump_button_padding"
                                    android:layout_marginTop="@dimen/jump_button_vertical_margin"
                                    android:layout_marginLeft="@dimen/home_header_buttons_button_horizontal_margin"
                                    android:layout_marginRight="@dimen/home_header_buttons_button_horizontal_margin"
                                    android:background="@drawable/jump_to_button"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/jump_to_button_text_size"
                                    android:text="thighs"  />
                                <Button
                                    android:id="@+id/jumpToForearmsSizeButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minHeight="0dp"
                                    android:minWidth="0dp"
                                    android:padding="@dimen/jump_button_padding"
                                    android:layout_marginTop="@dimen/jump_button_vertical_margin"
                                    android:layout_marginLeft="@dimen/home_header_buttons_button_horizontal_margin"
                                    android:layout_marginRight="@dimen/home_header_buttons_button_horizontal_margin"
                                    android:background="@drawable/jump_to_button"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/jump_to_button_text_size"
                                    android:text="forearms"  />
                                <Button
                                    android:id="@+id/jumpToWaistSizeButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minHeight="0dp"
                                    android:minWidth="0dp"
                                    android:padding="@dimen/jump_button_padding"
                                    android:layout_marginTop="@dimen/jump_button_vertical_margin"
                                    android:layout_marginLeft="@dimen/home_header_buttons_button_horizontal_margin"
                                    android:layout_marginRight="@dimen/home_header_buttons_button_horizontal_margin"
                                    android:background="@drawable/jump_to_button"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/jump_to_button_text_size"
                                    android:text="waist"  />
                                <Button
                                    android:id="@+id/jumpToNeckSizeButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minHeight="0dp"
                                    android:minWidth="0dp"
                                    android:padding="@dimen/jump_button_padding"
                                    android:layout_marginTop="@dimen/jump_button_vertical_margin"
                                    android:layout_marginLeft="@dimen/home_header_buttons_button_horizontal_margin"
                                    android:layout_marginRight="@dimen/home_header_buttons_button_horizontal_margin"
                                    android:background="@drawable/jump_to_button"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/jump_to_button_text_size"
                                    android:text="neck"  />
                            </com.google.android.flexbox.FlexboxLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/bodyWeightContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/home_sub_section_bar_top_top_margin"
                            android:orientation="vertical">
                            <include layout="@layout/chart_section_bar" />
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/home_top_chart_top_margin"
                                android:layout_marginLeft="@dimen/chart_card_horizontal_margin"
                                android:layout_marginRight="@dimen/chart_card_horizontal_margin"
                                android:layout_marginBottom="2dp">
                                <include layout="@layout/line_chart" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/armSizeContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/home_sub_section_bar_top_margin"
                            android:orientation="vertical">
                            <include layout="@layout/chart_section_bar" />
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/home_top_chart_top_margin"
                                android:layout_marginLeft="@dimen/chart_card_horizontal_margin"
                                android:layout_marginRight="@dimen/chart_card_horizontal_margin"
                                android:layout_marginBottom="2dp">
                                <include layout="@layout/line_chart" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/chestSizeContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/home_sub_section_bar_top_margin"
                            android:orientation="vertical">
                            <include layout="@layout/chart_section_bar" />
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/home_top_chart_top_margin"
                                android:layout_marginLeft="@dimen/chart_card_horizontal_margin"
                                android:layout_marginRight="@dimen/chart_card_horizontal_margin"
                                android:layout_marginBottom="2dp">
                                <include layout="@layout/line_chart" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/calfSizeContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/home_sub_section_bar_top_margin"
                            android:orientation="vertical">
                            <include layout="@layout/chart_section_bar" />
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/home_top_chart_top_margin"
                                android:layout_marginLeft="@dimen/chart_card_horizontal_margin"
                                android:layout_marginRight="@dimen/chart_card_horizontal_margin"
                                android:layout_marginBottom="2dp">
                                <include layout="@layout/line_chart" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/thighSizeContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/home_sub_section_bar_top_top_margin"
                            android:orientation="vertical">
                            <include layout="@layout/chart_section_bar" />
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/home_top_chart_top_margin"
                                android:layout_marginLeft="@dimen/chart_card_horizontal_margin"
                                android:layout_marginRight="@dimen/chart_card_horizontal_margin"
                                android:layout_marginBottom="2dp">
                                <include layout="@layout/line_chart" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/forearmSizeContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/home_sub_section_bar_top_top_margin"
                            android:orientation="vertical">
                            <include layout="@layout/chart_section_bar" />
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/home_top_chart_top_margin"
                                android:layout_marginLeft="@dimen/chart_card_horizontal_margin"
                                android:layout_marginRight="@dimen/chart_card_horizontal_margin"
                                android:layout_marginBottom="2dp">
                                <include layout="@layout/line_chart" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/waistSizeContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/home_sub_section_bar_top_top_margin"
                            android:orientation="vertical">
                            <include layout="@layout/chart_section_bar" />
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/home_top_chart_top_margin"
                                android:layout_marginLeft="@dimen/chart_card_horizontal_margin"
                                android:layout_marginRight="@dimen/chart_card_horizontal_margin"
                                android:layout_marginBottom="2dp">
                                <include layout="@layout/line_chart" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/neckSizeContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/home_sub_section_bar_top_top_margin"
                            android:orientation="vertical">
                            <include layout="@layout/chart_section_bar" />
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/home_top_chart_top_margin"
                                android:layout_marginLeft="@dimen/chart_card_horizontal_margin"
                                android:layout_marginRight="@dimen/chart_card_horizontal_margin"
                                android:layout_marginBottom="2dp">
                                <include layout="@layout/line_chart" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
    <include layout="@layout/fab_menu" />
</android.support.design.widget.CoordinatorLayout>